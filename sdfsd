  <script>
    // Year
    document.getElementById('y').textContent = new Date().getFullYear();

    // Reveal on view
    const io = new IntersectionObserver((ents)=>{
      ents.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add('on'); io.unobserve(e.target)} })
    }, {threshold:.12});
    document.querySelectorAll('.reveal').forEach(el=>io.observe(el));

    // Reactive lights follow scroll
    const lights = document.querySelector('.lights');
    const setLights = () => {
      const y = window.scrollY;
      const h = document.documentElement.scrollHeight - innerHeight;
      const p = h ? y / h : 0;
      const lx = 10 + p * 70;   // 10% -> 80%
      const ly = 10 + p * 60;   // 10% -> 70%
      lights.style.setProperty('--lx', lx+'%');
      lights.style.setProperty('--ly', ly+'%');
    };
    setLights();
    addEventListener('scroll', setLights, {passive:true});

    // Spotlight follows mouse across hero
    const hero = document.querySelector('.hero');
    const spot = document.querySelector('.spot');
    hero.addEventListener('pointermove', e=>{
      const r = hero.getBoundingClientRect();
      const x = (e.clientX - r.left)/r.width*100;
      const y = (e.clientY - r.top)/r.height*100;
      hero.style.setProperty('--mx', x+'%');
      hero.style.setProperty('--my', y+'%');
      spot.style.opacity = 1;
    });
    hero.addEventListener('pointerleave', ()=>{ spot.style.opacity = 0; });

    // Lightbox for work tiles (simple)
    const tiles = document.querySelectorAll('.tile img');
    tiles.forEach(img=>img.addEventListener('click',()=>{
      const src = img.getAttribute('src');
      const box = document.createElement('div');
      box.style.cssText = `position:fixed;inset:0;background:rgba(0,0,0,.8);display:grid;place-items:center;z-index:100`;
      box.innerHTML = `<img src="${src}" style="max-width:90vw;max-height:80vh;border-radius:12px;box-shadow:0 20px 80px rgba(0,0,0,.6)" alt="preview">`;
      box.addEventListener('click',()=>box.remove());
      document.body.appendChild(box);
    }));

    // Keyboard reduce‑motion check for users toggling system setting at runtime
    matchMedia('(prefers-reduced-motion: reduce)').addEventListener('change', e=>{
      document.documentElement.style.scrollBehavior = e.matches ? 'auto' : 'smooth';
    });
  </script>
